= form_for @video, html: { multipart: true } do |f|
  -if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description, cols: 100, rows: 15
  .field
    = f.label :video
    = f.file_field :video
  .actions
    = f.submit 'Save'
