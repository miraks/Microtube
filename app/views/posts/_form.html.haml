= form_for [video, @post] do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, 'Имя'
    %br
    = f.text_field :name
  .field
    = f.label :message, 'Сообщение'
    %br
    = f.text_area :message, cols: 60, rows: 10
  .actions
    = f.submit 'Save'